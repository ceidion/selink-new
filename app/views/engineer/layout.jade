doctype html
html(lang="ja", xmlns="http://www.w3.org/1999/xhtml")

  //- header
  include partials/header

  //- body
  body.no-skin.navbar-fixed

    //- top navigation
    #navbar.navbar.navbar-default.navbar-fixed-top.navbar-collapse
      //- container
      #navbar-container.navbar-container

    //- container
    #main-container.main-container

      //- side navigation
      a#menu-toggler.invisible.menu-toggler
      #sidebar.sidebar.navbar-collapse.collapse.sidebar-fixed.menu-min

      //- content
      .main-content
        .page-content

    //- modal
    #modal-area.modal.fade(tabindex="-1", data-backdrop="static")

    //- bootstrap data
    #info-base(data-id="#{_id}")